{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2022",
    "module": "commonjs",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "paths": {
      "@services/*": ["./application/services/*"]
    }
  },
  "include": ["types"],
  "exclude": ["node_modules"]
}
